---

<Layout pageTitle={t('projects.pageName')}>
  <section class="projects">
    <Title
      size="large"
      top={t('projects.titleTop')}
      bottom={t('about.intro.titleBottom')}
    />
    <Content
      client:only
      translations={translations}
      categories={categories}
      projects={projects}
    />
  </section>
</Layout>
